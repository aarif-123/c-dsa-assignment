
//q1
#include <iostream>
using namespace std;

int main() {
    int size;
    cout << "Enter the size of the array: ";
    cin >> size;

    int array[size];
    cout << "Enter the array elements: ";
    for (int i = 0; i < size; i++) {
        cin >> array[i];
    }

    int sum = 0;
    for (int i = 0; i < size; i++) {
        sum += array[i];
    }

    cout << "Sum of the array: " << sum << endl;

    return 0;
}


//q2

#include <iostream>
using namespace std;

int main() {
    int size;
    cout << "Enter the size of the array: ";
    cin >> size;

    int array[size];
    cout << "Enter the array elements: ";
    for (int i = 0; i < size; i++) {
        cin >> array[i];
    }

    int sumOdd = 0, sumEven = 0;
    for (int i = 0; i < size; i++) {
        if (array[i] % 2 == 0) {
            sumEven += array[i];
        } else {
            sumOdd += array[i];
        }
    }

    cout << "Sum of odd numbers: " << sumOdd << endl;
    cout << "Sum of even numbers: " << sumEven << endl;

    return 0;
}

//q3


#include <iostream>
using namespace std;

int main() {
    int size;
    cout << "Enter the size of the array: ";
    cin >> size;

    int array[size];
    cout << "Enter the array elements: ";
    for (int i = 0; i < size; i++) {
        cin >> array[i];
    }

    int countOdd = 0, countEven = 0;
    for (int i = 0; i < size; i++) {
        if (array[i] % 2 == 0) {
            countEven++;
        } else {
            countOdd++;
        }
    }

    cout << "Number of odd numbers: " << countOdd << endl;
    cout << "Number of even numbers: " << countEven << endl;

    return 0;
}
